<% if current_user %>
  <div class="col-sm-12">
    <h2>Review this now!</h2>
    <%= form_for :review, url: "/products/#{@product.id}/reviews" do |f| %>
      <div class="form-group">
        <%= f.text_area :description, rows: 5, cols:100 %>
      </div>
      <div class="form-group">
        <%= f.label :rating, "Rate Product" %>
        <%= f.select :rating, [1, 2, 3, 4, 5] %><br/>
        <button type="submit" class="btn btn-default"<%= f.submit "Submit" %>Submit Review</button>
      </div>
    <% end %>
  </div>
<% end %>